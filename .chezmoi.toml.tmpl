{{/* boolean feature tags */}}
{{/* inspired from https://github.com/twpayne/dotfiles/blob/master/home/.chezmoi.toml.tmpl */}}
{{- $work := false -}}{{/* true if this machine is a work machine */}}
{{- $home := false -}}{{/* true if this machine is a personnal machine */}}
{{- $laptop := false -}}{{/* true if this host machine */}}

{{- $osID := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-   $osID = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

# Generated by "chezmoi init"
# for OS: {{ $osID }}
# hostname: {{ .chezmoi.hostname }}

{{- if eq .chezmoi.hostname "magneto" -}}
{{- $work = true -}}

{{- if eq $osID "linux-arch" -}}
{{- $laptop = true -}}
{{- end -}}

{{- end -}}

{{- if eq .chezmoi.hostname "moriarty" -}}
{{- $home = true -}}
{{- if eq $osID "linux-arch" -}}
{{- $laptop = true -}}
{{- end -}}
{{- end -}}

